{
  "name": "nest-app",
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "description": "",
  "author": "Nikiforov Aleksandr Nikiforov515@yandex.ru",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && npm run copy-views",
    "copy-views": "cpx \"views/**/*\" dist/views",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm -- migration:create src/migrations/schema-update",
    "migration:generate:dev": "cross-env NODE_ENV=development npm run typeorm -- migration:generate src/migrations/schema-update -d ./data-source.ts",
    "migration:generate:prod": "cross-env NODE_ENV=production npm run typeorm -- migration:generate src/migrations/schema-update -d ./data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d ./data-source.ts",
    "migration:run:dev": "cross-env NODE_ENV=development npm run typeorm -- migration:run -d ./data-source.ts",
    "migration:run:prod": "cross-env NODE_ENV=production npm run typeorm -- migration:run -d ./data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d ./data-source.ts",
    "generate:erd": "ts-node -r tsconfig-paths/register generate-erd.ts",
    "generate:erd:svg": "mmdc -i diagrams/erd.mmd -o diagrams/erd.svg"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.10",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.0.7",
    "@nestjs/typeorm": "^11.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express-session": "^1.18.1",
    "graphql": "^16.10.0",
    "hbs": "^4.2.0",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "toastr": "^2.1.4",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/hbs": "^4.0.4",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.12",
    "@types/supertest": "^6.0.2",
    "cpx": "^1.5.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "puppeteer": "^24.6.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm-erd": "^0.0.4",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typeorm-uml": "^1.6.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "wait-on": "^8.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
